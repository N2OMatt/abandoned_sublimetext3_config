[

    ////////////////////////////////////////////////////////////////////////////
    // Multi line cursors...                                                  //
    ////////////////////////////////////////////////////////////////////////////
    { "keys": ["alt+shift+up"  ], "command": "select_lines", "args": {"forward": false} },
    { "keys": ["alt+shift+down"], "command": "select_lines", "args": {"forward": true } },

    ////////////////////////////////////////////////////////////////////////////
    // Tab navigation                                                         //
    ////////////////////////////////////////////////////////////////////////////
    //Override the Control + Tab to go to next/prev tab
    { "keys": ["ctrl+pagedown"], "command": "NOTHING" },
    { "keys": ["ctrl+pageup"  ], "command": "NOTHING" },

    { "keys": ["ctrl+tab"      ], "command": "next_view" },
    { "keys": ["ctrl+shift+tab"], "command": "prev_view" },

    ////////////////////////////////////////////////////////////////////////////
    // Comment separators                                                     //
    ////////////////////////////////////////////////////////////////////////////
    { "keys": ["ctrl+k","ctrl+/"], "command": "insert_comment" },

    ////////////////////////////////////////////////////////////////////////////
    // Insert Datetime                                                        //
    ////////////////////////////////////////////////////////////////////////////
    { "keys": ["ctrl+k", "ctrl+d"], "command": "insert_datetime" },

    ////////////////////////////////////////////////////////////////////////////
    // Some math helpers...                                                   //
    ////////////////////////////////////////////////////////////////////////////
    { "keys": ["ctrl+.", "ctrl+s"], "command": "make_sum" },

    ////////////////////////////////////////////////////////////////////////////
    // Text helpers                                                           //
    ////////////////////////////////////////////////////////////////////////////
    { "keys" : ["ctrl+k", "ctrl+c"], "command": "capitalize_words"}
]

